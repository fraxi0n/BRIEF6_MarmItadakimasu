<div>

        <p>recette de <%= recipe.title %> </p>

        <%= recipe.description %>

        <br>
        <% ingredientsComplete.forEach(ingredient => { %>
        <p>
                <%= ingredient.name %>    
                <%= ingredient.quantity%>
                <%= ingredient.unit %>
                <br>
                <img src=<%-ingredient.assetPath%>  >
        </p>                
        <% });   %>


        <br>


        <!-- sort -->
                <% instructions.sort().forEach(instruction => { %>
        <p>
                <%= instruction.step %>    
                <%= instruction.description%>
        </p>                
        <% });   %>



        <% comments.forEach(  comment=> { %>
        <p>
                <%= comment.username %>    
                <%= comment.content %>    
                <%= comment.note %>    
                <%= comment.createdAt %>    
        </p>                
        <% });   %>
        






</div>